AUTORUN=lwrap
DONT_NOTIFY=1
SQFUSE_REMOUNT=1
ENABLE_HOSTEXEC=1
if [[ "$SANDBOX_HOME" != 1 && "$SANDBOX_HOME_DL" != 1 && ! -d "$SANDBOXHOMEDIR/lwrap" && \
    "$PORTABLE_HOME" != 1 && "$TMP_HOME" != 1 && "$TMP_HOME_DL" != 1 && ! -d "$PORTABLEHOMEDIR/lwrap" ]]
    then
        LW_DIR="$HOME/.local/share/LutrisWine"
        RUNCACHEDIR="$LW_DIR/bin/cache"
        NVIDIA_DRIVERS_DIR="$LW_DIR/bin/nvidia-drivers"
fi
BWRAP_CAP+=("--cap-add" "CAP_SYS_ADMIN")
